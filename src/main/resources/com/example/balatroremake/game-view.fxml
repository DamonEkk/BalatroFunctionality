<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.balatroremake.Scenes.GameScreenController" alignment="CENTER">
    <HBox spacing="40" alignment="CENTER">
        <VBox fx:id="sideBar" spacing="5" alignment="CENTER">

            <padding>
                <Insets left="0"/>
            </padding>

            <Label>Blind</Label>
            <HBox alignment="CENTER">
                <Label>Score: </Label>
                <Label>300</Label>
            </HBox>

            <HBox alignment="CENTER">
                <Label>Round Score</Label>
                <Label>0</Label>
            </HBox>

            <HBox alignment="CENTER">
                <Label fx:id="baseCoins">0</Label>
                <Label>X</Label>
                <Label fx:id="mult">0</Label>
            </HBox>

            <HBox spacing="5">
                <VBox alignment="CENTER" spacing="8">
                    <Button>Run Info</Button>
                    <Button>Options</Button>
                </VBox>

                <VBox alignment="CENTER">
                    <HBox alignment="CENTER" spacing="5">
                        <VBox alignment="CENTER">
                            <Label>Hands</Label>
                            <Label>4</Label>
                        </VBox>
                        <VBox alignment="CENTER">
                            <Label>Discards</Label>
                            <Label>3</Label>
                        </VBox>
                    </HBox>

                    <Label fx:id="money">$4</Label>

                    <HBox alignment="CENTER_LEFT" spacing="5">
                        <VBox alignment="CENTER">
                            <Label>Ante</Label>
                            <Label>1/8</Label>
                        </VBox>
                        <VBox alignment="CENTER">
                            <Label>Round</Label>
                            <Label>1</Label>
                        </VBox>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>

        <VBox fx:id="mainGame" alignment="CENTER">
            <VBox fx:id="jokers" alignment="TOP_CENTER">

            </VBox>
            <VBox alignment="BOTTOM_CENTER">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <Label>gaming gang</Label>
            </VBox>

            <HBox fx:id="cardVBox" spacing="10" alignment="BOTTOM_CENTER"></HBox>

            <HBox fx:id="buttons" alignment="CENTER" spacing="10">
                <Button fx:id="playHandButton">Play Hand</Button>
                <HBox fx:id="sortBox">
                    <Button fx:id="rankButton">Rank</Button>
                    <Button fx:id="suitButton">Suit</Button>
                </HBox>

                <Button fx:id="discardButton">Discard</Button>
            </HBox>
        </VBox>
    </HBox>



</VBox>
